#include "gameWorld.h"

GameWorld::GameWorld(){
    gridx=32;
    setUpGameWorld();
    

}

void GameWorld::setUpGameWorld(){
    exitPos=sf::Vector2i(gridx-1, gridx-1);
    setUpTiles();

}

